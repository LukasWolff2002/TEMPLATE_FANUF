<div class="container mt-4">
  <div class="jumbotron">
    <h1 class="fw-bold mb-0">Bienvenido a Kanuf</h1>
    <p class="lead">Sistema de gestión de Bases de Datos</p>
    <hr class="my-4">
    
    <% if current_user %>
      <div class="card mb-4">
        <div class="card-body">
          <h5 class="card-title">Usuario actual</h5>
          <p class="card-text">
            <strong>Nombre:</strong> <%= current_user.nombre %> <%= current_user.apellido %><br>
            <strong>Cargo:</strong> <%= current_user.cargo %><br>
            
          </p>

          <div class="d-grid gap-2 mt-3">
            <%= link_to "Cambiar Contraseña", edit_password_path, class: "btn btn-outline-primary fw-semibold rounded-pill px-4 py-2" %>

          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>