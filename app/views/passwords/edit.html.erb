<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header text-center bg-white border-bottom-0">
          <h2 class="fw-semibold mb-0">Cambiar Contrase単a</h2>
        </div>
        <div class="card-body">
          <% if flash[:alert] %>
            <div class="alert alert-danger rounded-3 py-2 px-3"><%= flash[:alert] %></div>
          <% elsif flash[:notice] %>
            <div class="alert alert-success rounded-3 py-2 px-3"><%= flash[:notice] %></div>
          <% end %>

          <%= form_with model: current_user, url: password_path, method: :patch, local: true do |f| %>
            <div class="mb-3">
              <%= f.label :password, "Nueva Contrase単a", class: "form-label fw-semibold" %>
              <%= f.password_field :password, class: "form-control rounded-pill", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :password_confirmation, "Confirmar Nueva Contrase単a", class: "form-label fw-semibold" %>
              <%= f.password_field :password_confirmation, class: "form-control rounded-pill", required: true %>
            </div>

            <div class="d-grid">
              <%= f.submit "Actualizar Contrase単a", class: "btn btn-outline-primary rounded-pill fw-semibold" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
