<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2 class="text-center">Iniciar Sesión</h2>
        </div>
        <div class="card-body">
          <% if flash[:alert] %>
            <div class="alert alert-danger"><%= flash[:alert] %></div>
          <% end %>

          <%= form_with(scope: :session, url: login_path, method: :post, data: { turbo: false }, local: true) do |f| %>
            <div class="mb-3">
              <%= f.label :rut, "RUT", class: "form-label" %>
              <%= f.text_field :rut, class: "form-control", placeholder: "Ej: 12.345.678-9", required: true %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Contraseña", class: "form-label" %>
              <%= f.password_field :password, class: "form-control", required: true %>
            </div>

            <!-- Aquí agregamos la casilla de Recordarme -->
            <div class="form-check mb-3">
              <%= check_box_tag :remember_me, '1', false, class: "form-check-input", id: "remember_me" %>
              <%= label_tag :remember_me, "Recordarme", class: "form-check-label" %>
            </div>

            <div class="d-grid gap-2">
              <%= f.submit "Ingresar", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>